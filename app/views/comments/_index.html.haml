%hr
- @item.comments.order(:created_at).each do |comment|
  .comment{id: comment.id}
    = link_to comment.user.nickname, comment.user
    = time_ago_in_words(comment.updated_at)
    - if user_signed_in? && comment.user == current_user
      %span
        = link_to '編集', [:edit, @item, comment], remote: true
      %span
        = link_to '削除', [@item, comment], method: :delete, remote: true, :data => { :confirm => 'このコメントを削除してもよろしいですか？' }
    .panel.panel-default
      = markdown(comment.raw_body)