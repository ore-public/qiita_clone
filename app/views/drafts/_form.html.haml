= simple_form_for(@draft) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :title, label: 'タイトル', input_html: {class: 'input-lg'}
    .form-group
      = f.input :tag_list, label: 'タグ', input_html: {placeholder: 'タグ1, タグ2'}
    .form-group
      = f.input :raw_body, label: '本文', input_html: {rows: 10}

  .form-actions
    = f.button :submit, '下書き保存'
    - if @draft.item.nil?
      = f.button :submit, '投稿', name: 'public_create'
    - else
      = f.button :submit, '更新', name: 'public_update'
